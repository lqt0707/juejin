{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "e2e/**/*.ts",
    "playwright.config.ts",
    "e2e/index.test.ts",
    "dist"
  ]
}
